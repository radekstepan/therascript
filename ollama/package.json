{
  "name": "ollama",
  "version": "1.0.0",
  "description": "TypeScript host client for managing and interacting with Ollama Docker container",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start:dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "docker:up": "docker compose up -d ollama",
    "docker:down": "docker compose down",
    "docker:pull": "docker compose exec ollama ollama pull",
    "docker:logs": "docker compose logs ollama"
  },
  "keywords": [
    "ollama",
    "typescript",
    "nodejs",
    "llm",
    "docker"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
