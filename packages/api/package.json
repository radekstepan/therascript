{
  "name": "@therascript/api",
  "version": "1.1.0",
  "description": "Backend for Therapy Analyzer using Ollama, SQLite, and ElysiaJS",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "concurrently --kill-others-on-fail \"tsc --watch --preserveWatchOutput\" \"nodemon\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "preload": "yarn build && node dist/preloadDb.js",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "keywords": [
    "ollama",
    "typescript",
    "elysiajs",
    "nlp",
    "therapy",
    "sqlite"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dqbd/tiktoken": "^1.0.15",
    "@elysiajs/cors": "^1.1.0",
    "@elysiajs/swagger": "^1.1.0",
    "@sinclair/typebox": "^0.34.0",
    "@therascript/db": "*",
    "@therascript/elasticsearch-client": "*",
    "axios": "^1.8.4",
    "dockerode": "^4.0.6",
    "elysia": "^1.2.25",
    "form-data": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "ollama": "^0.5.3",
    "tar-stream": "^3.1.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.34",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.16.2",
    "@types/tar-stream": "^3.1.4",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
