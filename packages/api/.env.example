# Server Configuration
PORT=3001
NODE_ENV=development # Set to 'production' when running the start script
CORS_ORIGIN=http://localhost:3002 # Frontend origin (change for production)

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434 # Default Ollama URL
OLLAMA_MODEL=llama3                 # Model for development (e.g., smaller)
OLLAMA_CHAT_KEEP_ALIVE=5m           # How long to keep models loaded

# Whisper Configuration
WHISPER_API_URL=http://localhost:8000 # Default Whisper service URL
WHISPER_MODEL=tiny                  # Whisper model for development (e.g., tiny, base)

# Database Configuration
DB_PATH=./data/therapy-analyzer.sqlite
DB_TRANSCRIPTS_DIR=./data/transcripts
DB_UPLOADS_DIR=./data/uploads

# Upload Configuration
UPLOAD_MAX_FILE_SIZE=1g # e.g., 100m, 500m, 1g
